{
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "exclude": ["require-await", "no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/", "deno.json"],
      "exclude": ["src/client/.next", "src/client/dist", "src/server/dist"]
    },
    "options": {
      "lineWidth": 120
    }
  }
}

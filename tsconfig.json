{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
